<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/athleteImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp" />

        <LinearLayout
            android:id="@+id/recycler_itemLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="5dp">


            <TextView
                android:id="@+id/name_TxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Aardvark"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/breif_TxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Aardvark is a library that makes it dead simple to create actionable bug reports."
                android:textColor="@android:color/black" />

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>